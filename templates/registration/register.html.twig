{% extends 'base.html.twig' %}

{% block body %}
{% include 'nav.html.twig' %}
<main style="background: linear-gradient(135deg, rgba(26, 32, 44, 0.95) 0%, rgba(17, 24, 39, 0.95) 100%), radial-gradient(circle at top right, rgba(0, 255, 178, 0.15) 0%, transparent 60%); min-height: 100vh;">
    <div class="container col-10 position-relative overflow-hidden p-md-5 text-center align-items-center">
        <div class="col-md-6 p-lg-5 mx-auto my-5" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
        <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="row-cols-2 row d-flex g-3">
            <div class="">
            {{ form_row(registrationForm.username) }}
            </div>
            <div class="">
            {{ form_row(registrationForm.email) }}
            </div>
        </div>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="d-flex justify-content-center">
        {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-md col-6" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">Register</button>
        </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</main>
{% endblock %}
