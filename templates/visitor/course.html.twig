<!-- Add JavaScript for dynamic content loading -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('.nav-link[data-content]');
    const contentArea = document.getElementById('dynamic-content');

    const contentMap = {
        'introduction': `<h2 class='text-light mb-4'>Introduction</h2><p class='text-light'>Welcome to the introduction section.</p>`,
        'download': `<h2 class='text-light mb-4'>Download</h2><p class='text-light'>Here you can find download instructions.</p>`,
        'contents': `<h2 class='text-light mb-4'>Contents</h2><p class='text-light'>Table of contents goes here.</p>`,
        'browsers': `<h2 class='text-light mb-4'>Browsers & Devices</h2><p class='text-light'>Supported browsers and devices info.</p>`,
        'javascript': `<h2 class='text-light mb-4'>JavaScript</h2><p class='text-light'>JavaScript usage and tips.</p>`,
        'webpack': `<h2 class='text-light mb-4'>Webpack</h2><p class='text-light'>Webpack configuration details.</p>`,
        'parcel': `<h2 class='text-light mb-4'>Parcel</h2><p class='text-light'>Parcel bundler information.</p>`,
        'vite': `<h2 class='text-light mb-4'>Vite</h2><p class='text-light'>Vite setup guide.</p>`,
        'accessibility': `<h2 class='text-light mb-4'>Accessibility</h2><p class='text-light'>Accessibility best practices.</p>`,
        'rfs': `<h2 class='text-light mb-4'>RFS</h2><p class='text-light'>Responsive Font Sizes (RFS) info.</p>`,
        'rtl': `<h2 class='text-light mb-4'>RTL</h2><p class='text-light'>Right-to-left support details.</p>`,
        'contribute': `<h2 class='text-light mb-4'>Contribute</h2><p class='text-light'>How to contribute to the project.</p>`,
        'overview': `<h2 class='text-light mb-4'>Overview</h2><p class='text-light'>Overview of customization options.</p>`,
        'sass': `<h2 class='text-light mb-4'>Sass</h2><p class='text-light'>Sass usage and variables.</p>`,
        'options': `<h2 class='text-light mb-4'>Options</h2><p class='text-light'>Available options for customization.</p>`,
        'color': `<h2 class='text-light mb-4'>Color</h2><p class='text-light'>Color customization guide.</p>`,
        'color-modes': `<h2 class='text-light mb-4'>Color Modes</h2><p class='text-light'>Switch between color modes.</p>`,
        'components': `<h2 class='text-light mb-4'>Components</h2><p class='text-light'>Reusable components info.</p>`,
        'css-variables': `<h2 class='text-light mb-4'>CSS Variables</h2><p class='text-light'>Using CSS variables in your project.</p>`,
        'optimize': `<h2 class='text-light mb-4'>Optimize</h2><p class='text-light'>Optimization tips and tricks.</p>`,
        'breakpoints': `<h2 class='text-light mb-4'>Breakpoints</h2><p class='text-light'>Responsive breakpoints explained.</p>`,
        'containers': `<h2 class='text-light mb-4'>Containers</h2><p class='text-light'>How to use containers.</p>`,
        'grid': `<h2 class='text-light mb-4'>Grid</h2><p class='text-light'>Bootstrap grid system guide.</p>`,
        'columns': `<h2 class='text-light mb-4'>Columns</h2><p class='text-light'>Working with columns.</p>`
    };

    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const contentType = this.getAttribute('data-content');

            // Remove active class from all links
            navLinks.forEach(l => {
                l.classList.remove('active', 'text-white');
                l.classList.add('text-white-50');
                l.style.backgroundColor = '';
            });
            // Add active class to clicked link
            this.classList.add('active', 'text-white');
            this.classList.remove('text-white-50');
            if(contentType === 'introduction') {
                this.style.backgroundColor = '#4f2cc6';
            } else {
                this.style.backgroundColor = '#343a40';
            }

            // Load content based on the data-content attribute
            if(contentMap[contentType]) {
                contentArea.innerHTML = contentMap[contentType];
            } else {
                contentArea.innerHTML = `<h2 class='text-light mb-4'>Available Courses</h2>`;
            }
        });
    });
});
</script>

