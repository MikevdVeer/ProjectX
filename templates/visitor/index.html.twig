{% extends 'base.html.twig' %}

{% block body %}
{% include 'nav.html.twig' %}

	<main style="background: linear-gradient(135deg, rgba(26, 32, 44, 0.95) 0%, rgba(17, 24, 39, 0.95) 100%), radial-gradient(circle at top right, rgba(0, 255, 178, 0.15) 0%, transparent 60%); min-height: 100vh;">
		<!-- Hero Section -->
		<div class="position-relative overflow-hidden p-md-5 text-center d-flex align-items-center" style="min-height: 80vh;">
			<div id="particles-js" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;"></div>
			<div class="col-md-6 p-lg-5 mx-auto my-5 hero-content" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px; position: relative; z-index: 2;">
				<h1 class="display-3 fw-bold text-light">Designed for engineers</h1>
				<h3 class="fw-normal text-light opacity-75 mb-3">Build anything you want with Aperture</h3>
				<div class="d-flex gap-3 justify-content-center lead fw-normal">
					<a class="icon-link text-decoration-none" href="#discover">
						<button class="btn btn-lg pricing-btn" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">Discover</button>
					</a>
				</div>
			</div>
		</div>

		<!-- Company partners -->
		<div class="container-fluid py-5 partners-section">
			<div class="container text-center">
				<h3 class="display-4 fw-normal text-light mb-5">Our Partners</h3>
				<div class="row mt-3 g-4 justify-content-center">
					<div class="col-md-4 col-lg-3">
						<div class="p-4 partner-card" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
							<img src="{{ asset('images/partner1.png') }}" alt="Partner 1" class="img-fluid" style="height: 100px; object-fit: contain;">
						</div>
					</div>
					<div class="col-md-4 col-lg-3">
						<div class="p-4 partner-card" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
							<img src="{{ asset('images/partner2.png') }}" alt="Partner 2" class="img-fluid" style="height: 100px; object-fit: contain;">
						</div>
					</div>
					<div class="col-md-4 col-lg-3">
						<div class="p-4 partner-card" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
							<img src="{{ asset('images/partner3.jpg') }}" alt="Partner 3" class="img-fluid" style="height: 100px; object-fit: contain;">
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Discover Section -->
		<!-- Section 1 -->
		<div class="scroll-section py-5" id="discover">
			<div class="container p-5">
				<div class="row w-100 align-items-center">
					<div class="col-md-6 mb-4 mb-md-0" data-aos="fade-right">
						<div style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px; padding: 20px;">
							<img src="{{ asset('images/webshop.jpg') }}" alt="Webshop" class="img-fluid rounded">
						</div>
					</div>
					<div class="col-md-6">
						<div class="p-4" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
							<h1 class="fw-bold text-light">Webshop</h1>
							<p class="mt-3 text-light opacity-75">Looking for templates?<br>Buy them now in our webshop!</p>
							<a href="{{ path('app_webshop') }}" class="text-decoration-none">
								<button class="btn btn-lg pricing-btn" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">View Now!</button>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Section 2 -->
		<div class="scroll-section py-5" data-aos="fade-up">
			<div class="container p-5">
				<div class="row w-100 align-items-center">
					<div class="col-md-6 mb-4 mb-md-0">
						<div class="p-4" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
							<h1 class="fw-bold text-light">Course</h1>
							<p class="mt-3 text-light opacity-75">Do you want to learn more about the creation of templates?<br>Learn more with our courses!</p>
							<button class="btn btn-lg pricing-btn" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">View Now!</button>
						</div>
					</div>
					<div class="col-md-6" data-aos="fade-left">
						<div style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px; padding: 20px;">
							<img src="{{ asset('images/course.jpg') }}" alt="Course" class="img-fluid rounded">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Membership section -->
		<div class="container-fluid py-5" id="membership">
		<div class="container mx-auto row row-cols-1 row-cols-md-2 mb-3 text-center" >
			<div class="col">
				<div class="card mb-4 rounded-4 border-0 pricing-card" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1) !important;">
					<div class="card-body p-5">
						<div class="pricing-icon mb-4" style="background: rgba(0, 255, 178, 0.1);">
							<i class="bi bi-lightning-charge-fill fs-1" style="color: #00FFB2;"></i>
						</div>
						<h4 class="fw-bold mb-4 text-light">User</h4>
						<h1 class="card-title pricing-card-title mb-4 text-light">Free</h1>
						<ul class="list-unstyled mt-3 mb-4 text-light opacity-75">
							<li class="py-2">10 users included</li>
							<li class="py-2">2 GB of storage</li>
							<li class="py-2">Email support</li>
							<li class="py-2">Help center access</li>
						</ul>
						<a type="button" class="w-100 btn btn-lg pricing-btn" href="{{ path('app_register') }}" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">Sign up for free</a>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card mb-4 rounded-4 border-0 pricing-card" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1) !important;">
					<div class="card-body p-5">
						<div class="pricing-icon mb-4" style="background: rgba(0, 255, 178, 0.1);">
							<i class="bi bi-star-fill fs-1" style="color: #00FFB2;"></i>
						</div>
						<h4 class="fw-bold mb-4 text-light">Member</h4>
						<h1 class="card-title pricing-card-title mb-4 text-light">$15<small class="text-light opacity-75 fw-light">/mo</small>
						</h1>
						<ul class="list-unstyled mt-3 mb-4 text-light opacity-75">
							<li class="py-2">20 users included</li>
							<li class="py-2">10 GB of storage</li>
							<li class="py-2">Priority email support</li>
							<li class="py-2">Help center access</li>
						</ul>
						<button type="button" class="w-100 btn btn-lg btn-primary pricing-btn" style="background: #00FFB2; border: none; color: #000;">Get started</button>
					</div>
				</div>
			</div>
		</div>
	</div>

		<!-- FAQ Section -->
		<section class="py-5">
			<div class="container">
				<div class="p-4" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
					<h2 class="text-center mb-5 text-light">FAQ</h2>
					<div class="accordion" id="faqAccordion">
						<div class="accordion-item border-0 mb-3" data-aos="fade-up" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); opacity: 1 !important; display: block !important; visibility: visible !important;">
							<h2 class="accordion-header">
								<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" 
									style="background: rgba(255, 255, 255, 0.03); color: #00FFB2; border: 1px solid rgba(255, 255, 255, 0.1);">
									What is MCSA about?
								</button>
							</h2>
							<div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
								<div class="accordion-body text-light opacity-75">
									MCSA is a start-up company. They sell templates for websites. The team is working on creating the necessary website so that the company can officially start
								</div>
							</div>
						</div>
						<div class="accordion-item border-0" data-aos="fade-up" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); opacity: 1 !important; display: block !important; visibility: visible !important;">
							<h2 class="accordion-header">
								<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2"
									style="background: rgba(255, 255, 255, 0.03); color: #00FFB2; border: 1px solid rgba(255, 255, 255, 0.1);">
									Our Goals
								</button>
							</h2>
							<div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
								<div class="accordion-body text-light opacity-75">
									MCSA's mission is to create a site where customers can buy templates for their site. In addition, MCSA wants to give the customer the opportunity to follow a course where the customer learns how to build a site. Finally, MCSA wants the templates to be customizable to a certain extent.
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		{% if not app.user %}
		<!-- Sign Up Section -->
		<section class="py-5">
			<div class="container">
				<div class="text-center p-5" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
					<h2 class="mb-4 text-light">Sign up today.</h2>
					<button class="btn btn-lg pricing-btn" style="background: #00FFB2; border: none; color: #000;">Sign up</button>
				</div>
			</div>
		</section>
		{% endif %}

	<div class="container d-flex justify-content-between mt-5 pt-4 border-top text-muted">
				<p>Version: 2.13.6</p>
				<p>0.0.8</p>
			</div>
	</main>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
    <script src="{{ asset('js/animations.js') }}"></script>
{% endblock %}
