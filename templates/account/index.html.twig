{% extends 'base.html.twig' %}

{% block body %}
    {% include 'nav.html.twig' %}
    <main style="background: linear-gradient(135deg, rgba(26, 32, 44, 0.95) 0%, rgba(17, 24, 39, 0.95) 100%), radial-gradient(circle at top right, rgba(0, 255, 178, 0.15) 0%, transparent 60%); min-height: 100vh;">
        <div class="container col-10 position-relative overflow-hidden p-md-5 text-center align-items-center">
            <div class="col-md-6 p-lg-5 mx-auto my-5" style="background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 16px;">
                <h1>Account</h1>

                {% if app.user.profilepicture %}
                    <img src="{{ asset('images/pfps/' ~ app.user.profilepicture) }}" alt="pfp" class="img-thumbnail" style="height: 50px;width: 50px;border-radius: 50%">
                {% else %}
                    <i class="bi bi-person"></i>
                {% endif %}
                {{ form_errors(form) }}

                {{ form_start(form) }}

                {{ form_row(form.profilePicture, {
                    label: "Profile picture"
                }) }}
                <div class="row-cols-2 row d-flex g-3">
                    <div class="">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                {{ form_row(form.plainPassword, {
                    label: 'Password',
                }) }}
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-md col-6" style="background: rgba(0, 255, 178, 0.1); border: 1px solid #00FFB2; color: #00FFB2;">Submit</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}
