{% extends 'base.html.twig' %}

{% block title %}{{ order.name }}{% endblock %}

{% block body %}
    <h1>Order from {{ order.user.username }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Template Name</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for template in orderTemplates %}
        <tr>
            <td>{{ template.id }}</td>
            <td>{{ template.name }}</td>
            {% if template.price %}
            <td>{{ template.price }}</td>
            {% else %}
                <td>{{ 0.00 }}</td>
            {% endif %}
            
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}